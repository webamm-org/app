<%= form_with(model: [plan, authentication], class: "max-w-4xl mx-auto") do |form| %>
  <% if authentication.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(authentication.errors.count, "error") %> prohibited this authentication from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% authentication.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="my-5">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name (typically user, admin, etc.):</label>
    <%= form.text_field :name, class: 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light', disabled: authentication.persisted? %>
  </div>
  <div class="mt-5 flex my-5">
    <input type="checkbox" name="authentication[options][allow_sign_up]" class="shrink-0 mt-0.5 border-gray-300 rounded text-blue-600 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-600 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800" <%= authentication.options.key?('allow_sign_up') ? 'checked' : '' %> />
    <label for="af-submit-application-privacy-check" class="text-sm ms-2">Allow sign up</label>
  </div>
  <div class="mt-5 flex my-5">
    <input type="checkbox" name="authentication[options][two_factor_authentication]" class="shrink-0 mt-0.5 border-gray-300 rounded text-blue-600 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-600 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800" <%= authentication.options.key?('two_factor_authentication') ? 'checked' : '' %> />
    <label for="af-submit-application-privacy-check" class="text-sm ms-2">Two-factor authentication</label>
  </div>
  <div class="mt-5 flex my-5">
    <input type="checkbox" name="authentication[options][invitations]" class="shrink-0 mt-0.5 border-gray-300 rounded text-blue-600 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-600 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800" <%= authentication.options.key?('invitations') ? 'checked' : '' %> />
    <label for="af-submit-application-privacy-check" class="text-sm ms-2">Enable invitations</label>
  </div>
  <div class="mt-5 flex my-5">
    <input type="checkbox" name="authentication[options][online_indication]" class="shrink-0 mt-0.5 border-gray-300 rounded text-blue-600 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-600 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800" <%= authentication.options.key?('online_indication') ? 'checked' : '' %> />
    <label for="af-submit-application-privacy-check" class="text-sm ms-2">Indicate online status</label>
  </div>
  <%= form.submit "Submit", class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
<% end %>
