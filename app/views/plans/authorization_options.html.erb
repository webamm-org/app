<%= turbo_frame_tag "authorization_options_#{@action_name}" do %>
  <% if @options_for_select.present? %>
    <%= select_tag "resource[#{@action_name}_options][authorization]", options_for_select(@options_for_select, @selected_options), multiple: true, class: 'py-2 px-3 pe-9 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600 mt-2' %>
  <% else %>
    <input type="hidden" name="resource[#{@action_name}_options][authorization]" value=""/>
    <span class="inline-block text-sm text-gray-800 mt-2.5 dark:text-neutral-200">Please select authentication first</span>
  <% end %>
<% end %>
